{%- style -%}
.announcement-bar-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .announcement-bar-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .announcement-bar__text {
    text-align: center;
    margin: auto;
  }
{%- endstyle -%}

<div class="announcement-bar section-{{ section.id }}-padding" style="background-color: {{ section.settings.background_color }}; color: {{ section.settings.text_color }};">
  <div class="page-width">
    <p class="announcement-bar__text">{{ section.settings.announcement_text }}</p>
  </div>
</div>

{% schema %}
{
  "name": "Custom Announcement Bar",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "announcement_text",
      "default": "Your announcement goes here!",
      "label": "Announcement Text"
    },
    {
      "type": "color",
      "id": "background_color",
      "default": "#ffffff",
      "label": "Background Color"
    },
    {
      "type": "color",
      "id": "text_color",
      "default": "#000000",
      "label": "Text Color"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Custom Announcement Bar"
    }
  ]
}
{% endschema %}
